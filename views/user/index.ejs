            }
            .comment_title{
              padding-left: 150px;
            }
            #CommentTableContent{
              border-bottom: 1px solid #dfe3e6;
            }
            #CommentTableContent th{
              padding-top: 10px;
              padding-bottom: 10px;
            }
            #CommentTableContent a{
              font-weight: normal;
            }
            .comment_table_post_title{
              margin-left: 10px;
            }
            .comment_table_text a{
              margin-left: 10px;
              margin-right: 10px;
            }
            .comment_table_info{
              margin-right: 10px;
              display: flex;
              flex-direction: column;
              align-items: center;
            }
            .comment_table_info a{
              font-size: 12px;
              color: gray !important;
            }
            .comment_table_info a:hover{
              color: gray;
              text-decoration: none;
            }
            .msg_nodata{
              text-align: center;
              margin-top:15px;
            }
            .msg_nodata a{
              color: gray !important;
              font-size:16px;
            }

            .ui_post_footer{
              display: flex;
              flex-direction: column;
              align-items: center;
              border-top: 1px solid #dfe3e6;
              padding-top: 20px;
