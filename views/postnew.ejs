<html>
  <head>
    <%- include('./partials/head') %>
    <script src="/public/js/postnew.js"></script>
  </head>

  <body>
    <div class="wrap">
      <div class="header">
        <%- include('./partials/header') %>
      </div>
      <div class="content">
        <style>
        .content{
          background-color: #F8F8FF;
          width:100%;
          padding-top: 30px;
          padding-bottom: 60px;
        }
        @media(min-width:800px){
          .content{
            display: flex;
            flex-direction: column;
            align-items: center;
          }
        }
        .newpost_area{
          background-color: white;
          width:800px;
          border: 1px solid #dfe3e6;
        }
        .newpost_header{
          padding-top: 40px;
          padding-left: 30px;
          padding-bottom: 30px;
          display: flex;
          flex-direction: row;
          align-items: center;
        }
        .np_type{
          margin-left: 8px;
          font-size: 16px;
          color: gray;
          cursor: pointer;
        }
        .np_type:hover{
          color: #de0581;
        }
        .list_post_type{
          left:0px;
          top:0px;
          position: absolute;
          display: flex;
          flex-direction: column;
          width: 150px;
          border: 1px solid #dfe3e6;
          border-radius: 5px 5px;
        }
        .lp_type{
          padding-left: 15px;
          padding-top:5px;
          padding-bottom:5px;
          background-color: white;
        }
        .lp_type:hover{
          background-color: #dfe3e6;
        }

        .newpost_content{
          border-top: 1px solid #dfe3e6;
          padding-left:30px;
          padding-right:30px;
        }
        .np_title{
          margin-top: 30px;
        }
        .np_content{
          margin-top: 15px;
        }
        .input_title{
          padding-left: 15px;
          padding-top: 3px;
          padding-bottom: 3px;
          width: 100%;
          height: 46px;
          border: 1px solid #dfe3e6;
        }
        .input_title:focus{outline: none;}
        .input_content{
          padding-left: 15px;
          padding-top: 15px;
          width: 100%;
          min-height: 600px;
          border: 1px solid #dfe3e6;
        }
        .input_content:focus{outline: none;}

        .np_buttons{
          display: flex;
          justify-content:flex-end;
          padding-left: 30px;
          padding-right: 30px;
          margin-top: 15px;
          margin-bottom: 15px;
        }
        .np_buttons a:hover{
          text-decoration: underline !important;
        }
        .cancel_btn{
          width: 90px;
          height: 40px;
          border: 1px solid #dfe3e6;
          border-radius: 2px 2px;
          display:flex;
          justify-content: center;
          align-items: center;
        }
        .post_btn{
          margin-left: 15px;
          width: 90px;
          height: 40px;
          border: 1px solid #dfe3e6;
          border-radius: 2px 2px;
          display:flex;
          justify-content: center;
          align-items: center;
          color: white !important;
        }
        </style>
        <div class="newpost_area">
          <div class="newpost_header">
            <span>
              <h2> 새 글 쓰기 </h2>
            </span>
            <span class="np_type">
              > 자유게시판
            </span>
            <div class="list_post_type none">
              <a href="#" class="lp_type a_basic"> 공연정보 </a>
              <a class="line"></a>
              <a href="#" class="lp_type a_basic"> 음악공유 </a>
              <a class="line"></a>
              <a href="#" class="lp_type a_basic"> 자유게시판 </a>
            </div>
          </div>
          <div class="newpost_content">
            <div class="np_title">
              <input class="input_title" type="text" placeholder="제목을 입력하세요.">
            </div>
            <div class="np_content">
              <textarea class="input_content" placeholder="내용을 입력하세요."></textarea>
            </div>
          </div>
          <div class="newpost_footer">
            <div class="np_buttons">
              <a href="#" class="a_basic cancel_btn"> 취소 </a>
              <a href="#" class="a_basic post_btn bg-dark"> 등록 </a>
            </div>
          </div>
        </div>
      </div>

      <div class="footer">
        <%- include('./partials/footer') %>
      </div>
    </div>
  </body>
</html>
