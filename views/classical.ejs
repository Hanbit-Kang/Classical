<html>
  <head>
      <%- include('./partials/head') %>
      <script src="/public/js/classical.js"></script>
  </head>

  <body>
    <div class="wrap">
      <div class="header">
        <%- include('./partials/header') %>
      </div>

      <div class="content">
        <style>
          .content{
            width: 100%;
            display: flex;
            align-items: center;
            flex-direction: column;
          }
          #BannerCarousel{
            display: flex;
            width: 100%;
            margin-bottom:50px;
            z-index: 0;
          }
          .displayArea{
            width: 600px;
            display: flex;
            justify-content: center;
            flex-direction: column;
          }
          .displaybox{
            width: 600px;
            margin-bottom: 100px;
            display: flex;
            flex-direction: column;
          }
          @media(min-width:1200px){
            .displayArea{
              width: 1200px;
              display: flex;
              justify-content: space-between;
              flex-direction:row;
            }
            .displaybox{
              width: 550px;
              display: flex;
              flex-direction: column;
            }
          }
          .box_title{
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            border-bottom: 1px solid;
          }
          .box_title h2{
            display: flex;
            margin-left: 20px;
            margin-bottom: 20px;
          }
          .box_title a{
            display: flex;
            float: right;
            font-size: 12px;
            margin-bottom: 10px;
            margin-right: 10px;
            color: gray !important;
            cursor: pointer;
          }

          .displaybox table{
            margin-top: 5px;
          }
          #PostTableContent th{
            padding-top: 3px;
            padding-bottom: 3px;
          }
          #PostTableContent a{
            font-weight: normal;
          }
          .post_table_title{
            margin-left: 10px;
          }
          .post_table_nickname{
            margin-right: 10px;
          }
          .msg_nodata{
            color: gray;
            text-align: center;
            margin-top:15px;
          }
        </style>
        <div id="BannerCarousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#BannerCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#BannerCarousel" data-slide-to="1"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/public/images/yeoleum.jpg" alt="YeolEum">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/public/images/seongjin.jpg" alt="SeongJin">
            </div>
          </div>
          <a class="carousel-control-prev" href="#BannerCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#BannerCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="displayArea">
          <div class="displaybox">
            <div class="box_title">
              <h2> 최신글 </h2>
              <a href="/post/index" class="a_basic"> > 전체글보기 </a>
            </div>
            <table>
              <colgroup>
                <col style="width:500px">
                <col style="width:100px">
              </colgroup>
              <thead>
                <tr id="PostTableTitle">
                  <th scope="col" class="post_title"></th>
                  <th scope="col" class="post_author"></th>
                </tr>
              </thead>
              <tbody>
                <% posts.forEach(function(post){ %>
                  <tr id="PostTableContent">
                    <th>
                      <a href="/post/view/<%=post._id%>" class="a_pointerAndunderline_black post_table_title"> <%=post.title%> </a>
                      <a href="/post/view/<%=post._id%>" class="a_pointerAndunderline_red"> [0] </a>
                    </th>
                    <th>
                      <a class="a_pointerAndunderline_black post_table_nickname align-center" href="/user/index/<%=post.author.id%>"> <%=post.author.nickname%> </a>
                    </th>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            <% if(posts.length==0) { %>
              <h6 class="msg_nodata"> 해당하는 데이터가 존재하지 않습니다. </h6>
            <% } %>
          </div>
          <div class="displaybox">
            <div class="box_title">
              <h2> 베스트게시판 </h2>
              <a> > 전체글보기 </a>
            </div>
            <table>
              <colgroup>
                <col style="width:450px">
                <col style="width:100px">
                <col style="width:50px">
              </colgroup>
              <thead>
                <tr id="PostTableTitle">
                  <th scope="col" class="post_title"></th>
                  <th scope="col" class="post_author"></th>
                  <th scope="col" class="post_like"></th>
                </tr>
              </thead>
              <tbody>
                <% bestposts.forEach(function(post){ %>
                  <tr id="PostTableContent">
                    <th>
                      <a href="/post/view/<%=post._id%>" class="a_pointerAndunderline_black post_table_title"> <%=post.title%> </a>
                      <a href="/post/view/<%=post._id%>" class="a_pointerAndunderline_red"> [0] </a>
                    </th>
                    <th>
                      <a class="a_pointerAndunderline_black post_table_nickname" href="/user/index/<%=post.author.id%>"> <%=post.author.nickname%> </a>
                    </th>
                    <th>
                      ♥
                      <a class="a_pointerAndunderline_black post_table_like"><%=post.like%></a>
                    </th>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            <% if(bestposts.length==0) { %>
              <h6 class="msg_nodata"> 해당하는 데이터가 존재하지 않습니다. </h6>
            <% } %>
          </div>
        </div>
      </div>

      <div class="footer">
        <%- include('./partials/footer') %>
      </div>
    </div>
  </body>
</html>
