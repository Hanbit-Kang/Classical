<html>
  <head>
      <%- include('./partials/head') %>
      <script src="/public/js/classical.js"></script>
  </head>

  <body>
    <div class="wrap">
      <div class="header">
        <style>
          #BannerCarousel{
            display: flex;
            width: 100%;
          }
          .dot{
            color: gray;
            opacity: 50%;
          }
        </style>
        <div id="BannerCarousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#BannerCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#BannerCarousel" data-slide-to="1"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/public/images/yeoleum.jpg" alt="YeolEum">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/public/images/seongjin.jpg" alt="SeongJin">
            </div>
          </div>
          <a class="carousel-control-prev" href="#BannerCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#BannerCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="content">
        <style>
          .content{
            width: 100%;
            display: flex;
            margin-top:50px;
            align-items: center;
            flex-direction: column;
          }
          .displayArea{
            width: 600px;
            display: flex;
            justify-content: center;
            flex-direction: column;
          }
          .displaybox{
            width: 600px;
            margin-bottom: 100px;
            display: flex;
            flex-direction: column;
          }
          @media(min-width:1200px){
            .displayArea{
              width: 1200px;
              display: flex;
              justify-content: space-between;
              flex-direction:row;
            }
            .displaybox{
              width: 550px;
              display: flex;
              flex-direction: column;
            }
          }
          .box_title{
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            border-bottom: 1px solid;
          }
          .box_title h2{
            display: flex;
            margin-left: 20px;
            margin-bottom: 20px;
          }
          .box_title a{
            display: flex;
            float: right;
            font-size: 12px;
            margin-bottom: 10px;
            margin-right: 10px;
            color: gray !important;
            cursor: pointer;
          }

          .posts{
            margin-left: 10px;
            margin-top: 10px;
          }
          .post{
            display: flex;
          }
          .post_left{
            display: flex;
            cursor: pointer;
            width: 75%;
            margin-right:5px;
          }
          .post_left:hover{
            text-decoration: underline;
          }
          .post_right{
            display: flex;
            cursor: pointer;
            width: 25%;
          }
          .post_comment_num{
            margin-left:5px;
            color: red;
          }
        </style>
