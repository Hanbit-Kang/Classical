<script src="/public/js/header.js"></script>
<style>
  .header{
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .menubar{
    display: flex;
    justify-content:space-between;
    align-items: center;
    width:100%;
    height: 50px;
    border-bottom: solid 1px #dfe3e6;
  }
  .mb_left{
    margin-left: 20px;
  }
  @media(min-width:800px){
    .mb_middle{
      display: flex !important;
      justify-content:space-around;
      width: 400px;
    }
    .mb_middle a{
      display: flex;
      cursor: pointer;
    }
  }
  .mb_middle{
    display: none;
  }
  .mb_right{
    display: flex;
    width: 130px;
    margin-right: 20px;
    justify-content: space-between;
  }
  .mb_right a{
    display: flex;
    font-family: "Montserrat", sans-sans-serif;
    cursor: pointer;
    color: black;
    text-decoration: none;
  }

  .a_basic{
    color: black !important;
    text-decoration: none !important;
  }
  .none{
    display: none !important;
  }
  .dot{
    color: gray;
    opacity: 50%;
  }
</style>
<div class="menubar">
  <span class="mb_left">
    <a href="/"> <img src="/public/images/classicalLogo.png" width="150px"></img> </a>
  </span>
  <span class="mb_middle">
    <a> 공지사항 </a>
    <a> 공연정보 </a>
    <a> 음악공유 </a>
    <a> 자유게시판 </a>
  </span>
  <span class="mb_right">
    <% if(isAuthenticated){ %>
      <a class="logout"> Logout </a>
      <a class="dot"> | </a>
      <a href="/mypage"> 내 정보 </a>
    <% } else { %>
      <a href="/login"> Login </a>
      <a class="dot"> | </a>
      <a href="/register"> Register </a>
    <% } %>
  </span>
</div>
