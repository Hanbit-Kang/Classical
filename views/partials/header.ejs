<script src="/public/js/header.js"></script>
<style>
  .header{
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .content{
    margin-top: 50px;
  }
  .menubar{
    box-shadow: 0px 1px 10px 2px #dfe3e6;
    z-index: 1;
    position: fixed;
    background-color: white;
    top:0;
    display: flex;
    justify-content:space-between;
    align-items: center;
    width:100%;
    height: 50px;
    border-bottom: solid 1px #dfe3e6;
  }
  .mb_middle a{
    transition-duration: 0.2s;
  }
  .mb_middle a:hover{
    transform: scale(1.1);
  }
  .mb_left{
    margin-left: 20px;
  }
  @media(min-width:800px){
    .mb_middle{
      display: flex !important;
      justify-content:space-around;
      width: 400px;
    }
    .mb_middle a{
      display: flex;
      cursor: pointer;
    }
  }
  .mb_middle{
    display: none;
  }

  .mb_right{
    display: flex;
    width: 130px;
    margin-right: 20px;
    justify-content: space-between;
  }
  .mb_right a{
    display: flex;
    font-family: "Montserrat", sans-sans-serif;
    cursor: pointer;
    color: black;
    text-decoration: none;
  }
  .mb_right_login{
    display:flex;
    flex-direction: row;
  }
  .alertmenu{
    margin-right: 20px;
    cursor: pointer;
  }
  .dropdown_btn{
    display: flex;
    font-size: 18px;
    margin-right: 20px;
  }
  .dropdown_btn img{
    cursor: pointer;
  }
  .dropdown_btn a{
    color: black;
    cursor: pointer;
  }
  .dropdown_btn a:hover{
    text-decoration: underline !important;
  }

  .dropdown_usermenu{
    left:0px;
    top:45px;
    width:150px;
    position: fixed;
    display: flex;
    flex-direction: column;
    border: 1px solid #dfe3e6;
    border-radius: 5px 5px;
    z-index: 2;
  }
  .dd_child{
    font-size: 16px;
    padding-left: 20px;
    padding-right: 20px;
    padding-top:10px;
    padding-bottom:10px;
    background-color: white;
  }
  .dd_child:hover{
    background-color: #dfe3e6;
  }
  .dropdown_usermenu span{
    cursor:pointer;
    display: flex;
    justify-content: space-between;
  }
  .logout_img{
    margin-top:3px;
  }

  .a_basic{
    color: black !important;
    text-decoration: none !important;
  }
  .none{
    display: none !important;
  }
  .dot{
    color: gray;
    opacity: 50%;
  }
  .line{
    border-top: 1px solid #dfe3e6;
    width:100%;
  }
  .msg{
    opacity: 100%;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 10px;
    padding-bottom: 10px;
    border: 1px solid #dfe3e6;
    position: fixed;
    left: 10px;
    top: calc(100% - 60px);
    z-index: 1;
    transition-duration: 0.7s;
    transition-delay: 2.5s;
  }
  .bold{
    font-weight: bold;
  }
  .lighter{
    font-weight: lighter;
  }
  .a_pointerAndunderline_black{
    color:black;
    cursor: pointer;
  }
  .a_pointerAndunderline_black:hover{
    color:black;
    text-decoration: underline;
  }
  .a_pointerAndunderline_red{
    color:red;
    cursor: pointer;
  }
  .a_pointerAndunderline_red:hover{
    color:red;
    text-decoration: underline;
  }
</style>
<div class="menubar">
  <span class="mb_left">
    <a href="/"> <img src="/public/images/classicalLogo.png" width="150px"></img> </a>
</span>

  <span class="mb_middle">
    <a class="a_basic" href="/post/index?category=0"> 공지사항 </a>
    <a class="a_basic" href="/post/index?category=1"> 자유게시판 </a>
    <a class="a_basic" href="/post/index?category=2"> 음악공유 </a>
    <a class="a_basic" href="/post/index?category=3"> 공연정보 </a>
  </span>
  <% if(isAuthenticated){ %>
  <span class="mb_right_login">
    <span class="alertmenu">
      <span class="alert_btn">
        <img class="alert_btn_child" src="/public/images/alert.png" width="25px" height="25px">
      </span>
      <div class="alert_usermenu none">

      </div>
    </span>

    <span class="usermenu">
      <span class="dropdown_btn">
        <img class="dropdown_btn_child" src="/public/images/user.png" width="25px" height="25px">
        <!--<a class="dropdown_btn_child"> <#%=whoami.passport.user.nickname%></a>-->
      </span>
      <div class="dropdown_usermenu none">
        <a href="/user/index/<%=whoami.passport.user.id%>" class="dd_child a_basic"> 내 정보 </a>
        <a class="line"></a>
        <a href="/user/edit/<%=whoami.passport.user.id%>" class="dd_child a_basic"> 정보수정 </a>
        <a class="line"></a>
        <span onclick="location.href='/logout'" class="dd_child a_basic">
          <a> 로그아웃 </a>
          <img class="logout_img" src="/public/images/logout.png" width="20px" height="20px">
        </span>
      </div>
    </span>
  </span>
  <% } else { %>
  <span class="mb_right">
      <a href="/login"> Login </a>
      <a class="dot"> | </a>
      <a href="/register"> Register </a>
  </span>
  <% } %>
</div>

<%if(whoami.error){%>
<a class="msg bg-warning a_basic"> <%=whoami.error.msg%> </a>
<%whoami.error=null%>
<%}%>
